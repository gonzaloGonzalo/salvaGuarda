<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mensaje_alarma_rojo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_red_dark"
        android:text="@string/riesgo_rojo"
        android:gravity="center"
        android:textSize="35dp" />

    <Button
        android:id="@+id/boton_centro_evacuacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boton_linterna"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Punto de evacuacion" />

    <Button
        android:id="@+id/boton_linterna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mensaje_alarma_rojo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Linterna" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boton_centro_evacuacion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:visibility="visible"
        app:srcCompat="@drawable/mensajes_mock" />

</RelativeLayout>