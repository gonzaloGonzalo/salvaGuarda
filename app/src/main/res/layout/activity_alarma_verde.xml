<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ar.com.emsoft.salvaguarda.WelcomeActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/mensaje_alarma_verde"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_green_light"
        android:text="@string/riesgo_verde"
        android:gravity="center"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/prec"
        android:layout_alignStart="@+id/prec"
        android:layout_below="@+id/mensaje_alarma_verde"
        android:layout_marginTop="43dp"
        android:text="Precipitacion" />

    <TextView
        android:id="@+id/prec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="102dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="21dp"
        android:text="Temperatura" />

    <TextView
        android:id="@+id/precipitacion_verde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:text="2mm" />

    <TextView
        android:id="@+id/temperatura_verde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/prec"
        android:layout_alignBottom="@+id/prec"
        android:layout_alignEnd="@+id/precipitacion_verde"
        android:layout_alignRight="@+id/precipitacion_verde"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/precipitacion_verde"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/temperatura_verde"
        android:layout_toRightOf="@+id/temperatura_verde"
        android:text="mm" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignTop="@+id/temperatura_verde"
        android:text="Â°C" />

</RelativeLayout>